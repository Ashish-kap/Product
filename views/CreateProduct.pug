body
  .container
    form.form(method='POST' action='/create-product' enctype='multipart/form-data')
      h1.text-center Create Product
      .form-group
        label.required-field(for='formGroupExampleInput') Product Title
        input#name.form-control(type='text' name='name')
      .form-group
        label.required-field(for='formGroupExampleInput2') Price
        input#price.form-control(type='text' name='price')
      .form-group
        label.required-field(for='formGroupExampleInput2') Description
        input#description.form-control(type='text' name='description')
      .form-group(enctype='multipart/form-data')
        label(for='images' style='margin-top:30px')
          | Images
        input#ImageCover(type='file' name='images' multiple='' style='padding-left:10px')
      button.btn.btn-primary(type='submit') Submit
